# Local development settings
QDRANT_HOST=localhost
QDRANT_PORT=6333

# AWS settings (for production)
AWS_REGION=us-east-2
COGNITO_USER_POOL_ID=your_user_pool_id_here
COGNITO_APP_CLIENT_ID=your_app_client_id_here
COGNITO_APP_CLIENT_SECRET=your_app_client_secret_here

# Database settings
# Set to 'sqlite' for local development, 'postgres' or 'dynamodb' for production
DB_TYPE=postgres
DB_HOST=your_rds_endpoint_here
DB_PORT=5432
DB_NAME=postgres
DB_USER=your_db_username_here
DB_PASSWORD=your_db_password_here
DB_SSL_MODE=require
DB_OPTIONS=application_name=ragchatbot&connect_timeout=30

# S3 settings (for document storage in production)
# S3_BUCKET=your-document-bucket
